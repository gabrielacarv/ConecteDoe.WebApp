                        </li>

                    </ul>

                    <ul class="footer-link-list">

                        <li>
                            <h3 class="h4 link-title">Contato</h3>
                        </li>

                        <li>
                            <a href="#" class="footer-link">+55 34 98835-1792</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">comercial@conectedoe.com.br</a>
                        </li>

                        <li>
                            <a href="#" class="footer-link">administracao@conectedoe.com.br</a>
                        </li>

                    </ul>

                </div>

            </div>
        </div>

        <div class="footer-bottom">
            <p class="copyright">
                &copy; 2023 <a href="#">@@conectdoe</a> All right reserved
            </p>
        </div>

    </footer>


    <!--
      - #GO TO TOP
    -->

    <a href="#top" class="go-top active" data-go-top>
        <ion-icon name="chevron-up-outline"></ion-icon>
    </a>





    <!--
      - custom js link
    -->
    <!--
      - ionicon link
    -->
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
